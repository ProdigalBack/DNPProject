@model VIACinema.Models.Catalog.ShowingSeatIndexModel

<head>
    <title></title>
</head>
<body id="page1">
    <!-- START PAGE SOURCE -->
    
    <div id="content">
        <div id="slogan">
            <div class="image png"></div>
            <div class="inside">
                <h2>We are breaking<span>All Limitations</span></h2>

            </div>
        </div>
        <div>
            <a asp-controller="Catalog" asp-action="OrderHistory" asp-route-id="1">
                <h5>Click to see Order history</h5>
            </a>
        </div>
        <hr>
        <div class="row">
            <div class="col-6">
                <h1>@Model.ShowingSeats.First().Name</h1>
            </div>
        </div>
        <hr>

        <div class="ticketOrder">
            <div class="container">
                @foreach (var showingSeats in Model.ShowingSeats)
            {
                @if (showingSeats.Status.Equals("available"))
            {
                <a asp-controller="Catalog" asp-action="ChooseSeat" asp-route-id=@showingSeats.Id>
                    <div class="available" tabindex="-1"></div>
                </a>
        }
        else
        {
            <div class="ordered" tabindex="-1"></div>

    }
                @if (showingSeats.Seat.Column % 8 == 0)
            {
                <div></div>
        }
        }
            </div>
            <a asp-controller="Catalog" asp-action="OrderSeat" asp-route-id=@Model.ShowingSeats.First().Id>
                <div class="wrapper"><span><span>Order Tickets</span></span></div>
            </a>
        </div>





    </div>
              
    <script type="text/javascript">Cufon.now();</script>
    <!-- END PAGE SOURCE -->
</body>