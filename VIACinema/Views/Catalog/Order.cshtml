@model VIACinema.Models.Catalog.ShowingSeatIndexModel

<head>
    <title></title>
</head>
<body id="page1">
    <!-- START PAGE SOURCE -->
    
                <div id="content">
                    <div id="slogan">
                        <div class="image png"></div>
                        <div class="inside">
                            <h2>We are breaking<span>All Limitations</span></h2>

                        </div>
                    </div>
                    <hr>
                        <div class="row">
                            <div class="col-6">
                                <h1>@Model.ShowingSeats.First().Name</h1>
                            </div>
                        </div>
                        <hr>
                    
                        <div class="ticketOrder">
                            <div class="container">
                         @foreach (var showingSeats in Model.ShowingSeats)
                         {
                            @if (showingSeats.Status.Equals("available"))
                            {
                             <div class="available" tabindex="-1"></div>
                            }
                            else
                            {
                               <div class="ordered"></div>

                            }
                        @if (showingSeats.Seat.Column%8==0)
                        {
                           <div></div>
                        }                    
                          }
                            </div>

                            <div class="wrapper"><a class="link2" ><span><span>Order Tickets</span></span></a></div>
                      </div>
                    
                   



                </div>
              
    <script type="text/javascript">Cufon.now();</script>
    <!-- END PAGE SOURCE -->
</body>